<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuutama">

    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="40dp"
        android:text="HI" />

    <TextView
        android:id="@+id/txthelo"
        android:layout_below="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="This is your helper!" />

    <ImageView
        android:id="@+id/txtpilih"
        android:layout_below="@+id/txthelo"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="This is your helper!" />

    <ImageView
        android:id="@+id/gambar5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="200dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/gambar5" />

    <ImageButton
        android:id="@+id/imagebtn1"
        android:layout_below="@id/txthelo"
        android:background="@drawable/fashion"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/imagebtn1"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:text="LAUNDRY"
        android:layout_marginLeft="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imagebtn2"
        android:layout_below="@id/txthelo"
        android:background="@drawable/truk"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="310dp"
        android:layout_width="90dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebtn2"
        android:textSize="16dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="5dp"
        android:text="DOORSMEER" />

    <ImageButton
        android:id="@+id/imagebtn3"
        android:layout_below="@id/imagebtn1"
        android:background="@drawable/gas"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="180dp"
        android:layout_width="100dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebtn3"
        android:textSize="16dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="15dp"
        android:text="GAS" />

    <ImageButton
        android:id="@+id/imagebtn4"
        android:layout_below="@id/imagebtn2"
        android:background="@drawable/water"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="310dp"
        android:layout_width="100dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebtn4"
        android:textSize="16dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="15dp"
        android:text="GALON AIR" />


</RelativeLayout>