<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".galon1">

    <Button
        android:id="@+id/btngalon"
        android:background="@drawable/arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        android:text="INFORMASI" />

    <TextView
        android:id="@+id/txtwelcome1"
        android:layout_below="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="JAYA GALON AIR" />

    <ImageView
        android:id="@+id/gambar1"
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bottle"/>

    <TextView
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="120dp"
        android:text="Jenis Galon Air :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="120dp"
        android:layout_width="250dp"
        android:hint="GALON, BOTOL LITER"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/gambar2"
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/water"/>

    <TextView
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="120dp"
        android:text="Jumlah Galon Air :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit2"
        android:layout_below="@+id/txtwelcome1"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="120dp"
        android:layout_width="250dp"
        android:hint="2"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnback"
        android:layout_below="@+id/edit2"
        android:layout_marginTop="190dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="35dp"
        android:text="Kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnhubungi"
        android:layout_below="@+id/edit2"
        android:layout_marginTop="190dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="220dp"
        android:text="Hubungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>